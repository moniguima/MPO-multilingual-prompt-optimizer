# API Keys (required for live mode)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Future multi-provider support
# OPENAI_API_KEY=your_openai_api_key_here

# Application Settings
MPO_LOG_LEVEL=INFO
MPO_DEMO_MODE=true  # Set to false to use live API calls

# Model Configuration
MPO_DEFAULT_MODEL=sonnet  # Options: sonnet, haiku
MPO_DEFAULT_TEMPERATURE=0.7
MPO_DEFAULT_MAX_TOKENS=1024

# Paths (customize if needed)
MPO_CONFIG_DIR=config
MPO_DATA_DIR=data
MPO_CACHE_DIR=data/cache
MPO_REPORTS_DIR=reports
